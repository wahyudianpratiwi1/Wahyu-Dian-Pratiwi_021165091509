<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Eksternal_Storage">

    <Button
        android:id="@+id/btn_hapuscatatan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="actionHapusCatatanExt"
        android:text="Hapus Catatan"
        app:layout_constraintEnd_toEndOf="@+id/btn_ubahcatatan"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_ubahcatatan"
        app:layout_constraintTop_toBottomOf="@+id/btn_ubahcatatan" />

    <Button
        android:id="@+id/btn_buatcatatan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="actionBuatCatatanExt"
        android:text="Buat Catatan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_bacacatatan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:onClick="actionBacaCatatanExt"
        android:text="Baca Catatan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_buatcatatan" />

    <Button
        android:id="@+id/btn_ubahcatatan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:onClick="actionUbahCatatanExt"
        android:text="Ubah Catatan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_bacacatatan" />

    <View
        android:id="@+id/view2"
        android:layout_width="382dp"
        android:layout_height="477dp"
        android:layout_marginTop="8dp"
        android:background="#AC44BD"
        app:layout_constraintEnd_toEndOf="@+id/btn_hapuscatatan"
        app:layout_constraintStart_toStartOf="@+id/btn_hapuscatatan"
        app:layout_constraintTop_toBottomOf="@+id/btn_hapuscatatan" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="monospace"
        android:text="Catatan"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_hapuscatatan"
        app:layout_constraintStart_toStartOf="@+id/btn_hapuscatatan"
        app:layout_constraintTop_toBottomOf="@+id/btn_hapuscatatan" />
</androidx.constraintlayout.widget.ConstraintLayout>